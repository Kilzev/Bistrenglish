<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bistrenglish" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@color/light_backgraund_bt_white</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.MyApp.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/light_backgraund_bt_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.Button</item>
        <item name="fontFamily">@font/inter_light</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevation">1dp</item>
        <item name="android:shadowColor">@color/light_backgraund_bt_white</item>

    </style>
    <style name="ShapeAppearance.MyApp.Button" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>